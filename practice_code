    public static void main(String[] args) {

        //do while loop
        Scanner scanner = new Scanner(System.in);

        int age = 0;

        do {
            System.out.println("Your age cannot be negative");
            System.out.print("Enter your age : ");
            age = scanner.nextInt();
        }
        while(age < 0);

        System.out.printf("You are %d years old", age);

        scanner.close();
    }
