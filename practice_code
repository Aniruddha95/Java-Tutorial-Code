//quiz game

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        // Quiz Game

        // steps :
        // questions array[]
        // options array[][]
        // declare variables
        // welcome message
        // question (loop)
        // options
        // get guess from user
        // check the guess
        // display final score

        String[] questions = {"1. Which planet is known as the “Red Planet”?", "2. Who wrote the national anthem of India?", "3. What is the largest ocean on Earth?", "4. Who invented the telephone?", "5. Which country is known as the “Land of the Rising Sun”?"};
        String[][] options = {{"Venus", "Mars", "Jupiter", "Mercury"},
                              {"Bankim Chandra Chatterjee", "Rabindranath Tagore", "Sarojini Naidu", "Subhas Chandra Bose"},
                              {"Atlantic Ocean", "Indian Ocean", "Arctic Ocean", "Pacific Ocean"},
                              {"Alexander Graham Bell", "Thomas Edison", "Nikola Tesla", "Isaac Newton"},
                              {"China", "Japan", "Thailand", "South Korea"}};

        String[] answers = {"Mars", "Rabindranath Tagore", "Pacific Ocean", "Alexander Graham Bell", "Japan"};

        int score = 0;
        String guess;

        Scanner scanner = new Scanner(System.in);
        System.out.println("Welcome to the Quiz Game");

        for(int i=0; i<questions.length; i++){
            System.out.println(questions[i]);

            for(String option : options[i]){
                System.out.println(option);
            }
            System.out.print("Enter your guess : ");
            guess = scanner.nextLine();

            if(answers[i].equals(guess)){
                System.out.println("Right Answer");
                score = score + 1;
            }
            else {
                System.out.println("Wrong Answer");
            }
        }
        System.out.println("Your total score is : "+score);
        scanner.close();
    }
}

//rock, paper, scissors game

import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        //Rock, Paper, Scissors Game

        // Steps :
        // declare variables
        // declare string array for computer choice
        // user input for move
        // random computer choice
        // switch cases for win, lose or draw
        // while loop for continuation

        Random random = new Random();
        Scanner scanner = new Scanner(System.in);

        String userChoice;
        String compChoice;
        String playAgain = "yes";
        String[] choice = {"rock", "paper", "scissors"};

        while (playAgain.equals("yes")) {
            System.out.print("Enter your move : ");
            userChoice = scanner.nextLine();

            int randomIndex = random.nextInt(choice.length);
            compChoice = choice[randomIndex];
            System.out.println("Computer choice : "+compChoice);

            switch (userChoice) {
                case "rock" -> {
                    if (compChoice.equals("scissors")) {
                        System.out.println("You Win!");
                    } else if (compChoice.equals("paper")) {
                        System.out.println("You Lose!");
                    } else {
                        System.out.println("Draw!");
                    }
                }
                case "paper" -> {
                    if (compChoice.equals("rock")) {
                        System.out.println("You Win!");
                    } else if (compChoice.equals("scissors")) {
                        System.out.println("You Lose!");
                    } else {
                        System.out.println("Draw!");
                    }
                }
                case "scissors" -> {
                    if (compChoice.equals("paper")) {
                        System.out.println("You Win!");
                    } else if (compChoice.equals("rock")) {
                        System.out.println("You Lose!");
                    } else {
                        System.out.println("Draw!");
                    }
                }
                default -> System.out.println("Invalid move! Please enter rock, paper, or scissors");
            }
            System.out.print("Play again (yes/no) : ");
            playAgain = scanner.nextLine();
        }
        if(playAgain.equals("no")){
            System.out.println("Thank you for playing!");
        }
        scanner.close();
    }
}

