//break & continue

public class Main {
    public static void main(String[] args) {

        //break = break out of loop (stop)
        //continue = skip a current iteration of loop (skip)

        for(int i=0; i<10; i++) {

            if(i == 4) {
                continue;
            }
            else if(i == 7) {
                break;
            }
            System.out.print(i+" ");
        }
    }
}

