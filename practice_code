    public static void main(String[] args) {

        Car car = new Car();

        System.out.println(car.make);
        System.out.println(car.model);
        System.out.println(car.year);
        System.out.println(car.price);
        System.out.println(car.isRunning);

        //car.isRunning = true;
        //System.out.println(car.isRunning);

        car.start();
        System.out.println(car.isRunning);
        car.stop();
        System.out.println(car.isRunning);

        car.drive();
        car.brake();
    }
}

//Car.java

public class Car {

    String make = "Ford";
    String model = "Mustang";
    int year = 2025;
    double price = 58000.99;
    boolean isRunning = false;

    void start() {
        isRunning = true;
        System.out.println("You start the engine");
    }
    void stop() {
        isRunning = false;
        System.out.println("You stop the engine");
    }
    void drive() {
        System.out.println("You drive the "+model);
    }
    void brake() {
        System.out.println("You brake the car");
    }
}

//constructors
//Main.java

public class Main {
    public static void main(String[] args) {

        Student student1 = new Student("SpongeBob", 30, 3.2);
        Student student2 = new Student("Patrick", 34, 1.5);
        Student student3 = new Student("Sam", 27, 3.9);

        System.out.println(student1.name);
        System.out.println(student1.age);
        System.out.println(student1.gpa);
        System.out.println(student1.isEnrolled);
        System.out.println(student1.city);
        System.out.println();

        System.out.println(student2.name);
        System.out.println(student2.age);
        System.out.println(student2.gpa);
        System.out.println(student2.isEnrolled);
        System.out.println(student2.city);
        System.out.println();

        System.out.println(student3.name);
        System.out.println(student3.age);
        System.out.println(student3.gpa);
        System.out.println(student3.isEnrolled);
        System.out.println(student3.city);
        System.out.println();

        student1.study();
        student2.play();
    }
}

//Student.java

public class Student {

    String name;
    int age;
    double gpa;
    boolean isEnrolled;
    String city;

    Student(String name, int age, double gpa) {
        this.name = name;
        this.age = age;
        this.gpa = gpa;
        this.isEnrolled = true;
        this.city = "London";
    }
    void study() {
        System.out.println(this.name+" is studying");
    }
    void play() {
        System.out.println(this.name+" is playing");
    }
}
